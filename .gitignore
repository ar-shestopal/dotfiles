[user]
    email = ar.shestopal@gmail.com
    name = Alexander Shestopal
[push]
    default = simple
[core]
    editor = mvim -v
[color]
    status = auto
    branch = auto
    interactive = auto
    diff = auto
[alias]
    ch = checkout
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p
    sb = show-branch
    lo = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar - %cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    la = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ai) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[status]
    relativePaths = true
[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol,tab-in-indent,space-before-tab,blank-at-eol
    excludesfile = /home/johan/.gitignore_global
[color]
    ui     = auto
    branch = auto
    diff   = auto
    status = auto

[color "branch"]
    current = yellow
    local   = green
    remote  = cyan

[color "status"]
    added     = yellow
    changed   = green
    untracked = cyan
